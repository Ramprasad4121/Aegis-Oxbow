# ════════════════════════════════════════════════════════════
# Aegis-Oxbow — Environment Variables
# Copy this file to .env and fill in real values.
# NEVER commit .env to version control.
# ════════════════════════════════════════════════════════════

# ── Smart Contract / Chain ───────────────────────────────────
# Deployed AegisVault contract address (populated by deploy script)
VAULT_ADDRESS=0x0000000000000000000000000000000000000000

# ── Relayer Backend ──────────────────────────────────────────
# Private key for the relayer's wallet (must match on-chain relayer address)
RELAYER_PRIVATE_KEY=0xYOUR_RELAYER_PRIVATE_KEY_HERE

# RPC URL for the target network
RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/

# Batch execution parameters (optional — defaults shown)
BATCH_SIZE_THRESHOLD=5
BATCH_TIMEOUT_MS=15000

# HTTP port for the relayer API
PORT=4000

# CORS origin whitelist (frontend origin)
CORS_ORIGIN=http://localhost:3000

# ── Deployment ───────────────────────────────────────────────
# Deployer private key (only needed for deploy scripts, NOT the relayer)
PRIVATE_KEY=0xYOUR_DEPLOYER_PRIVATE_KEY_HERE

# BSC Testnet RPC URL (for Hardhat deploy scripts)
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/

# opBNB Testnet RPC URL
OPBNB_TESTNET_RPC_URL=https://opbnb-testnet-rpc.bnbchain.org

# BscScan API key (for contract verification)
BSCSCAN_API_KEY=YOUR_BSCSCAN_API_KEY_HERE

# Address of the relayer wallet (used by deploy script)
RELAYER_ADDRESS=0xYOUR_RELAYER_WALLET_ADDRESS_HERE

# ── Frontend (Next.js) ───────────────────────────────────────
# WalletConnect project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=YOUR_WALLETCONNECT_PROJECT_ID

# Contract address (same as VAULT_ADDRESS, exposed to browser)
NEXT_PUBLIC_VAULT_ADDRESS=0x0000000000000000000000000000000000000000

# Relayer backend URL (frontend polls this)
NEXT_PUBLIC_RELAYER_URL=http://localhost:4000

# RPC URL for wagmi (browser-side)
NEXT_PUBLIC_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/

# ── Optional ─────────────────────────────────────────────────
# Enable gas reporter in contract tests
REPORT_GAS=false

# Start listening from a specific block (0 = latest)
START_BLOCK=0
